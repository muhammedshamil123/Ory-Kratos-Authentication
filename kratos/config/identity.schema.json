{
  "$id": "default",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default Identity",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email",
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            }
          }
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "title": "Full Name"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "user"],
          "title": "User Role"
        }
      },
      "required": ["email", "name", "role"],
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}